<resources>


    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="TransparentAppTheme" parent="AppTheme">
    	<item name="actionBarStyle">@style/TransparentAppTheme.ActionBar</item>
    	<item name="windowActionBarOverlay">true</item>
    	<item name="android:actionBarStyle">@style/TransparentAppTheme.ActionBar</item>
    	<item name="android:windowActionBarOverlay">true</item>
	</style>

	<style name="TransparentAppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
	    <item name="backgroundSplit">#65000000</item>
   	    <item name="android:background">#65000000</item>
 	</style>    

</resources>