<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FillParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="FillParent.Vert">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FillParent.Hor">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FillParent.Center">
        <item name="android:gravity">center</item>
    </style>
    
    <style name="TransparentAppTheme" parent="@style/Theme.Sherlock">
    	<item name="actionBarStyle">@style/TransparentAppTheme.ActionBar</item>
    	<item name="windowActionBarOverlay">true</item>
   	</style>

	<style name="TransparentAppTheme.ActionBar" parent="@style/Widget.Sherlock.ActionBar">
	    <item name="background">#65000000</item>
	    <item name="backgroundSplit">#65000000</item>
   	    <item name="android:background">#65000000</item>
   	</style> 
    	    
</resources>