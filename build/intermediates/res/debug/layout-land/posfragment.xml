<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="match_parent"
       android:orientation="vertical" >
       
         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="@string/input_poi_step2"
             android:textAppearance="?android:attr/textAppearanceMedium" />

		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="horizontal" >
		            
			    <LinearLayout
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:orientation="vertical" >   
			
			        <LinearLayout
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_margin="2dp"
			            android:orientation="horizontal" >
			
				        <TextView
				            android:id="@+id/poi_coordinates"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="bottom"
				            android:text="@string/input_poi_coordiantes"
				            android:textAppearance="?android:attr/textAppearanceMedium" />    
			
				        <TextView
				            android:id="@+id/poi_coordinates_text"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="bottom"
				            android:text="... N ...E"
				            android:textAppearance="?android:attr/textAppearanceSmall" />
				        
				     </LinearLayout>
			
			
			         <LinearLayout
			             android:layout_width="match_parent"
			             android:layout_height="wrap_content"
			             android:layout_margin="2dp"
			             android:orientation="horizontal" >
			       
			
			
				         <TextView
				             android:id="@+id/poi_azimuth"
				             android:layout_width="wrap_content"
				             android:layout_height="wrap_content"
				             android:layout_gravity="bottom"
				             android:text="@string/input_poi_azimuth"
				             android:textAppearance="?android:attr/textAppearanceMedium" />
				         
			
			
				        <TextView
				            android:id="@+id/poi_azimuth_text"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="bottom"
				            android:text="... grad"
				            android:textAppearance="?android:attr/textAppearanceSmall" />
				        
				     </LinearLayout>
				     
			         <LinearLayout
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:orientation="horizontal" >
			        
			
				        <TextView
				            android:id="@+id/poi_dist"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center"
				            android:text="@string/input_poi_dist"
				            android:textAppearance="?android:attr/textAppearanceMedium" />
				
			
				        <EditText
				            android:id="@+id/poi_dist_num"
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center"
				            android:ems="10"
				            android:inputType="number" >
				
				            <requestFocus />
				        </EditText>
				     </LinearLayout>
				 </LinearLayout>
			     	        	         
		        <!-- compass beg -->

		<FrameLayout
		    android:id="@+id/compassView"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_gravity="center" >
		
		    <LinearLayout 
		        android:layout_width="fill_parent"
				android:layout_height="fill_parent" >
		
		        <com.nextgis.mobile.forms.BubbleSurfaceView
		            android:id="@+id/bubbleSurfaceView"
		            android:layout_width="100dp"
		            android:layout_height="100dp"/>
		    </LinearLayout>
		    
		    <LinearLayout
		        android:id="@+id/compassLayout"
		        android:gravity="center" >
		
		        <com.nextgis.mobile.forms.CompassImage
		            android:id="@+id/compass"
		            android:layout_width="250dip"
		            android:layout_height="250dip"
		            android:src="@drawable/compass_bezel" />
		    </LinearLayout>
		
		    <LinearLayout android:gravity="center" >
		        <ImageView
		            android:layout_width="250dip"
		            android:layout_height="250dip"
		            android:src="@drawable/compass_baseplate" />
		    </LinearLayout>
		
		    <LinearLayout android:gravity="center" >
		
		        <com.nextgis.mobile.forms.CompassImage
		            android:id="@+id/compassNeedleMagnetic"
		            android:layout_width="250dip"
		            android:layout_height="250dip"
		            android:src="@drawable/compass_needle"
		            android:visibility="invisible" />
		    </LinearLayout>
		
		    <LinearLayout android:gravity="center" >
		
		        <com.nextgis.mobile.forms.CompassImage
		            android:id="@+id/compassNeedle"
		            android:layout_width="250dip"
		            android:layout_height="250dip"
		            android:src="@drawable/compass_needle" />
		    </LinearLayout>
		
		
		
		    <LinearLayout
		        android:layout_height="fill_parent"
				android:layout_width="match_parent"
		        android:layout_gravity="center"
		        android:gravity="right|bottom" >

		        <TextView
		            android:id="@+id/azimuth"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/default_azimuth"
		            android:textSize="30sp" />

		    </LinearLayout>
		
		</FrameLayout>
		        <!-- compass end -->     
		
		    </LinearLayout>
		    
	</LinearLayout>

</FrameLayout><!-- From: file:/home/bishop/work/projects/android/nextgismobile/res/layout-land/posfragment.xml -->